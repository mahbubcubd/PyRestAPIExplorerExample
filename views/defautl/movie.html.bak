<!DOCTYPE html>
<html lang="en">
<head>
  <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <style>

    .jumbotron {
    color: white;
    background-color: #13a3e4;
    margin-bottom: 0;
    padding-bottom: 0px;
    }

    /* Add a gray background color and some padding to the footer */
    footer {
      background-color: #f2f2f2;
      padding: 25px;
    }
      
   .now{
        position: relative;
        text-align: center;
        color: white;
      }
      .bottom-left {
    position: absolute;
    bottom: 8px;
    left: 16px;
}
      a{
          color: inherit;
      }
      .tag{
          color: skyblue;
          text-align: right;
      }
      
      .feed{
          border: 1px solid lightgray;
          padding-top: 10px;
          padding-bottom: 10px;
          margin-top: 5px;
          margin-bottom: 5px;
      }
      
      .news-tab{
          display: inline;
          padding-top: 30px;
          
      }
      
      ul li{
          display: inline-block;
          list-style: none;
          padding: 20px;
          text-decoration: none;
          text-align: center;
          border-bottom: solid 4px transparent;
          
          
      }
      
      
      ul li a:hover, ul li a:active{
          color: white;
          font-size; 20px;
          text-decoration: none;
          
      }
      
      ul li:hover,ul li:active,ul li:after{
          color: white;
          border-bottom: solid 4px white;
          transition: all 0.3s;
          
      }
      
      .search{
          float: right;
          margin: 20px;
      }
      .searchb{
          background: transparent;
          border: none;
          padding: 5px;
          
      }
      .s{
          color: white;
          font-weight: bold;
      }
      
      .margin-40{
          margin-top: 40px;
      }
      
    input, select, textarea {
    font-family: inherit;
    font-size: inherit;
    background: inherit;
    line-height: inherit;
    border: 1px solid white;
    padding: 5px;
    border-radius: 5px;
}
  </style>
</head>
<body>

<div class="jumbotron">
    <div class="search">
        <input type="text" id="q" name="search-news"/><button id="search" class="searchb" name="search">
            <span class="s glyphicon glyphicon-search"></span>
        </button>
    </div>
    
  <div class="container text-center">
    <h2>News Today</h2>
  </div>
  </div>

<div class="container">
<div class="col-md-6 col-md-offset-3">

    </div>

  <div class="tab-content">
    <div id="home" class="tab-pane fade in active">
      <div class="container margin-40">
          <div class="row">
          <div class="col-md-8 col-md-offset-2">
            <div class="now">
                <img src="{{=image_now}}" alt="image" style="width:100%;">
                 <div class="bottom-left"><h3><a href="{{=url_now}}" >
                    {{=title_now}}</a>
                </h3></div>
              </div>
              </div>
              {{import datetime}}
              {{for i in range(1,len(art)):}}
              <div class="col-md-8 col-xs-12 col-sm-10 col-sm-offset-1 col-md-offset-2 feed">
            <div class="feeds">
                <div class="col-sm-3 col-xs-4">
                 <img src="{{=art[i]['urlToImage']}}" alt="Image not Availabe" style="width:100%;">
                </div>
                <div class="col-sm-9 col-xs-8">
                <h6>
                    <a href="{{=art[i]['url']}}">{{=art[i]['title']}}</a>
                </h6>
                    <p class="tag">
                        {{
                          t=art[i]['publishedAt']
                          d=t[0:10]
                          h=t[11:19]
                          string_time=d+" "+h
                          time_now=datetime.datetime.now()
                          fmt = '%Y-%m-%d %H:%M:%S'
                          news_time = datetime.datetime.strptime(string_time, fmt)
                          ago=(time_now-news_time).total_seconds()
                          ago=int(ago/60)
                          min=ago%60
                          hour=ago/60
                        }}
                        {{=hour}}h {{=min}}m ago | {{=art[i]['source']['name']}}
                    </p>
                </div>
              </div>
              </div>
              {{pass}}
          </div>
        </div>
    </div>
    <div id="menu1" class="tab-pane fade">
      <div class="container margin-40">
          <div class="row">
          <div class="col-md-8 col-md-offset-2">
            <img src="{{=s1_img}}" alt="image" style="width:100%;">
                 <div>
                     <br>
                     <br>
                     <h3>
                    {{=s1_title}}
                </h3></div>
                <div>
                    <br>
                    <br>
                    <p>
                        {{=s1_description}}
                    </p>
              </div>
              </div>
          </div>
        </div>
    </div>
  </div>
    </div>

<script>
    $("#search").click(function(){
        var q = $('#q').val();
        window.location.href = '{{=URL("default","news")}}'+'?q='+q;;

});
</script>


</body>
</html>
